{
  "name": "flux-service",
  "version": "0.2.0",
  "description": "Backend to support Flux, the social exchange for Zanzibar's World of Nuclear Energy.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:up": "bash scripts/migrate.sh up",
    "migrate:down": "bash scripts/migrate.sh down",
    "migrate:latest": "bash scripts/migrate.sh latest",
    "seed": "bash scripts/seed.sh",
    "generate": "kysely-codegen --dialect=postgres --out-file=./src/db/types.ts",
    "generate-supa": "kysely-codegen --dialect=postgres --out-file=./src/db/supaTypes.ts",
    "generate-help": "kysely-codegen --help",
    "test": "node --test test/**/*.test.js"
  },
  "keywords": [
    "social",
    "exchange",
    "nuclear",
    "energy",
    "microservice",
    "fastify"
  ],
  "author": "Nuclear Ambitions LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cors": "^10.0.2",
    "@fastify/env": "^5.0.2",
    "@fastify/oauth2": "^8.1.1",
    "@fastify/sensible": "^6.0.3",
    "@sinclair/typebox": "^0.34.15",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-cli": "^7.3.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "resend": "^4.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "kysely-codegen": "^0.17.0",
    "kysely-ctl": "^0.10.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
